    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gameboy'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gameboy",
                    "--package=gameboy"
                ],
                "filter": {
                    "name": "gameboy",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_LOG": "gameboy=trace"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}